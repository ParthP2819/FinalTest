@model LoginVM
<style>
    .p-3 {
        padding: 1rem !important;
        margin-right: 620px;
    }
</style>
<div>
    <form method="post" style="align-3">
        <div class="border p-5 m-lg-5" style="width:80%">
            <div class="row pb-2">
                <h2 class="text-primary">Login</h2>
                <hr />
            </div>
            <div class="row">
                <div class="col-6 align-content-center">
                    <div class="mb-3 ">
                        <label>Email</label>
                        <input asp-for="Email" type="email" required class="form-control" />
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input asp-for="Password" required type="password" class="form-control" />
                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:150px">Login</button>                   
                </div>
                <div class="col-6">
                    <img style="width:auto" src="https://localhost:44317/\images\Login.jpg" />
                </div>

            </div>


        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptspartial"></partial>
    }
}

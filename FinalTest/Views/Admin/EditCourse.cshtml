@model Course

<form method="post" asp-action="EditCourse">
    <input hidden asp-for="CourseId" />

    <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-primary">Edit Course</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="CourseName"> </label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CoursePrice"> </label>
            <input asp-for="CoursePrice" type="number" required class="form-control" />
            <span asp-validation-for="CoursePrice" class="text-danger"></span>
        </div>
        <div class="col-12">
          
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>

            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}